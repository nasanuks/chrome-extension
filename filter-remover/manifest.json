{
  "manifest_version": 2,

  "name": "Filter Remover",

  "description": "Bring color back to website",
  "version": "1.0.1",
  "icons": { "16": "icon16.png",
             "48": "icon48.png",
            "128": "icon128.png" },
  "browser_action": {
    "default_icon": "icon16.png"
  },
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
    "matches": [
        "http://*/*",
        "https://*/*"
        ],
    "js": ["content.js"],
    "run_at": "document_idle"
    }
  ],
  "permissions": [
    "activeTab" /*,
    "storage",
    "https://ajax.googleapis.com/"
    */
  ]
}
